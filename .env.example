# ========= APPLICATION SETTINGS =========
# Environment: development | production | test
NODE_ENV=development

# Port the server will listen on
PORT=8000


# ========= DATABASE CONFIGURATION =========
# PostgreSQL connection URL - format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=SCHEMA
DATABASE_URL="postgresql://<username>:<password>@<host>:<port>/<database>?schema=public"


# ========= JWT CONFIGURATION =========
# Secret key for signing JWTs (use a strong, random string)
JWT_SECRET=<your_jwt_super_secret_key_here>

# Access token expiration time (in minutes)
JWT_ACCESS_EXPIRATION_MINUTES=30

# Refresh token expiration time (in days)
JWT_REFRESH_EXPIRATION_DAYS=30

# Password reset token expiration (in minutes)
JWT_RESET_PASSWORD_EXPIRATION_MINUTES=10

# Email verification token expiration (in minutes)
JWT_VERIFY_EMAIL_EXPIRATION_MINUTES=10


# ========= EMAIL SMTP CONFIGURATION =========
# SMTP server host
SMTP_HOST=<your_smtp_host>

# SMTP server port (typically 465 for SSL, 587 for TLS)
SMTP_PORT=<your_smtp_port>

# SMTP authentication username
SMTP_USERNAME=<your_smtp_username>

# SMTP authentication password
SMTP_PASSWORD=<your_smtp_password>

# Default "from" email address
EMAIL_FROM=<no-reply@yourdomain.com>


# ========= CLIENT CONFIGURATION =========
# Base URL of the frontend/client application
CLIENT_URL=<http://localhost:3000>