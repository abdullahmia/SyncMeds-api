<!-- Invoice Email Template -->
<div
  style="max-width: 600px; margin: 0 auto; padding: 40px 24px; font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Helvetica, Arial, sans-serif;"
>
  <!-- App Header -->
  <div style="text-align: center; margin-bottom: 32px;">
    <h1
      style="color: #111827; font-size: 24px; font-weight: 600; margin: 0 0 8px 0;"
    >SyncMeds</h1>
    <p style="color: #6b7280; font-size: 14px; margin: 0;">Your trusted pharmacy
      partner</p>
  </div>

  <!-- Main Card -->
  <div
    style="background: #ffffff; border-radius: 16px; padding: 40px 32px; box-shadow: 0 4px 24px rgba(0, 0, 0, 0.05); border: 1px solid #e5e7eb;"
  >
    <!-- Invoice Header -->
    <div
      style="margin-bottom: 24px; border-bottom: 1px solid #e5e7eb; padding-bottom: 24px;"
    >
      <h2
        style="color: #111827; font-size: 20px; font-weight: 600; margin: 0 0 8px 0;"
      >Invoice #{{invoiceNumber}}</h2>
      <p style="color: #374151; font-size: 16px; margin: 0 0 4px 0;">Hello
        <strong style="color: #111827;">{{customerName}}</strong>,</p>
      <p style="color: #374151; font-size: 16px; margin: 0;">Thank you for your
        purchase on
        {{issueDate}}.</p>
    </div>

    <!-- Payment Status -->
    <div style="margin-bottom: 24px;">
      <div
        style="display: flex; justify-content: space-between; margin-bottom: 16px;"
      >
        <div>
          <p style="color: #6b7280; font-size: 14px; margin: 0 0 4px 0;">
            <strong style="color: #374151;">Status:</strong>
            <span style="color: {{statusColor}};">{{status}}</span>
          </p>
        </div>
        <div>
          <p
            style="color: #6b7280; font-size: 14px; margin: 0 0 4px 0; text-align: right;"
          >
            <strong style="color: #374151;">Method:</strong>
            {{paymentMethod}}
          </p>
        </div>
      </div>
    </div>

    <!-- Items Table -->
    <div style="margin-bottom: 24px;">
      <table
        style="width: 100%; border-collapse: collapse; margin-bottom: 16px;"
      >
        <thead>
          <tr style="border-bottom: 1px solid #e5e7eb;">
            <th
              style="text-align: left; padding: 8px 0; color: #6b7280; font-size: 14px; font-weight: 500;"
            >Item</th>
            <th
              style="text-align: right; padding: 8px 0; color: #6b7280; font-size: 14px; font-weight: 500;"
            >Qty</th>
            <th
              style="text-align: right; padding: 8px 0; color: #6b7280; font-size: 14px; font-weight: 500;"
            >Price</th>
            <th
              style="text-align: right; padding: 8px 0; color: #6b7280; font-size: 14px; font-weight: 500;"
            >Total</th>
          </tr>
        </thead>
        <tbody>
          {{#each items}}
            <tr style="border-bottom: 1px solid #f3f4f6;">
              <td
                style="padding: 12px 0; color: #374151; font-size: 14px;"
              >{{name}}</td>
              <td
                style="padding: 12px 0; color: #374151; font-size: 14px; text-align: right;"
              >{{quantity}}</td>
              <td
                style="padding: 12px 0; color: #374151; font-size: 14px; text-align: right;"
              >{{unitPrice}}</td>
              <td
                style="padding: 12px 0; color: #374151; font-size: 14px; text-align: right;"
              >{{totalPrice}}</td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    </div>

    <!-- Totals -->
    <div style="text-align: right; margin-bottom: 32px;">
      <div style="display: inline-block; text-align: left; min-width: 200px;">
        <p
          style="color: #6b7280; font-size: 14px; margin: 0 0 8px 0; display: flex; justify-content: space-between;"
        >
          <span>Subtotal:</span>
          <span style="color: #374151; font-weight: 500;">{{subtotal}}</span>
        </p>
        <p
          style="color: #6b7280; font-size: 14px; margin: 0 0 8px 0; display: flex; justify-content: space-between;"
        >
          <span>Tax:</span>
          <span style="color: #374151;">{{tax}}</span>
        </p>
        <p
          style="color: #111827; font-size: 16px; font-weight: 600; margin: 16px 0 0 0; display: flex; justify-content: space-between; border-top: 1px solid #e5e7eb; padding-top: 8px;"
        >
          <span>Total:</span>
          <span>{{grandTotal}}</span>
        </p>
      </div>
    </div>

    <!-- Footer Message -->
    <div
      style="background: #f9fafb; border-radius: 8px; padding: 16px; margin-bottom: 24px;"
    >
      <p style="color: #6b7280; font-size: 14px; margin: 0; line-height: 1.5;">
        {{footerMessage}}
      </p>
    </div>

    <!-- Contact Info -->
    <div style="text-align: center;">
      <p style="color: #6b7280; font-size: 14px; margin: 0;">
        Need help? Contact us at
        <a
          href="mailto:support@SyncMeds.com"
          style="color: #3B82F6; text-decoration: none;"
        >support@SyncMeds.com</a>
      </p>
    </div>
  </div>

  <!-- Footer -->
  <div style="margin-top: 32px; text-align: center;">
    <p style="color: #9ca3af; font-size: 12px; margin: 0 0 4px 0;">Â©
      {{year}}
      SyncMeds. All rights reserved.</p>
    <p style="color: #d1d5db; font-size: 12px; margin: 0;">This invoice was sent
      to
      {{customerEmail}}.</p>
  </div>
</div>