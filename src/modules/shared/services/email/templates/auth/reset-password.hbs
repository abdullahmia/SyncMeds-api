<!-- Main Content -->
<div style="text-align: center; margin-bottom: 32px;">
  <!-- Security Icon -->
  <div
    style="display: inline-block; width: 80px; height: 80px; background: linear-gradient(135deg, #3b82f6 0%, #1d4ed8 100%); border-radius: 50%; display: flex; align-items: center; justify-content: center; margin-bottom: 24px; box-shadow: 0 8px 25px rgba(59, 130, 246, 0.3);"
  >
    <svg
      width="40"
      height="40"
      viewBox="0 0 24 24"
      fill="none"
      xmlns="http://www.w3.org/2000/svg"
    >
      <rect
        x="3"
        y="11"
        width="18"
        height="11"
        rx="2"
        ry="2"
        stroke="#ffffff"
        stroke-width="2"
      />
      <circle cx="12" cy="16" r="1" fill="#ffffff" />
      <path
        d="M7 11V7a5 5 0 0 1 10 0v4"
        stroke="#ffffff"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
      />
    </svg>
  </div>

  <!-- Main Heading -->
  <h1
    style="color: #1e293b; font-size: 32px; font-weight: 700; margin-bottom: 16px; line-height: 1.3;"
  >
    Password Reset Request
  </h1>

  <!-- Subtitle -->
  <p
    style="color: #64748b; font-size: 18px; margin-bottom: 0; font-weight: 500;"
  >
    We received a request to reset your password
  </p>
</div>

<!-- Greeting -->
<div style="margin-bottom: 32px;">
  <p style="color: #334155; font-size: 16px; margin-bottom: 16px;">
    Hello
    <strong style="color: #1e293b;">{{userName}}</strong>,
  </p>
  <p style="color: #334155; font-size: 16px; margin-bottom: 20px;">
    We received a request to reset the password for your PharmaCare Management
    System account. To proceed with the password reset, please use the
    verification code below:
  </p>
</div>

<!-- OTP Code Section -->
<div class="otp-code">
  <div style="margin-bottom: 8px;">
    <span
      style="color: #64748b; font-size: 14px; font-weight: 600; text-transform: uppercase; letter-spacing: 1px;"
    >
      Your Verification Code
    </span>
  </div>
  <div class="otp-digits">
    {{otpCode}}
  </div>
  <div style="margin-top: 12px;">
    <span style="color: #64748b; font-size: 14px;">
      Enter this code to reset your password
    </span>
  </div>
</div>

<!-- Instructions -->
<div style="margin-bottom: 32px;">
  <h3
    style="color: #1e293b; font-size: 20px; font-weight: 600; margin-bottom: 16px;"
  >
    How to use this code:
  </h3>
  <div
    style="background-color: #f8fafc; border-radius: 12px; padding: 24px; border: 1px solid #e2e8f0;"
  >
    <div style="margin-bottom: 16px;">
      <span
        style="color: #3b82f6; font-weight: 600; margin-right: 8px;"
      >1.</span>
      <span style="color: #334155;">Go back to the password reset page</span>
    </div>
    <div style="margin-bottom: 16px;">
      <span
        style="color: #3b82f6; font-weight: 600; margin-right: 8px;"
      >2.</span>
      <span style="color: #334155;">Enter the 6-digit verification code above</span>
    </div>
    <div style="margin-bottom: 0;">
      <span
        style="color: #3b82f6; font-weight: 600; margin-right: 8px;"
      >3.</span>
      <span style="color: #334155;">Create your new secure password</span>
    </div>
  </div>
</div>

<!-- Action Button -->
<div class="btn-container">
  <a href="{{resetLink}}" class="btn">
    Reset Password Now
  </a>
</div>

<!-- Important Information -->
<div class="info-box">
  <p style="margin: 0; color: #92400e; font-size: 14px;">
    <strong>⏱️ Time Sensitive:</strong>
    This verification code will expire in
    <strong>{{expiryTime}} minutes</strong>. Please use it promptly.
  </p>
</div>

<!-- Security Warning -->
<div class="warning-box">
  <p
    style="margin: 0 0 12px 0; color: #dc2626; font-size: 14px; font-weight: 600;"
  >
    🛡️ Security Notice
  </p>
  <p style="margin: 0; color: #dc2626; font-size: 14px; line-height: 1.5;">
    If you did not request a password reset, please ignore this email and
    contact our support team immediately. Your account security is our top
    priority.
  </p>
</div>

<!-- Additional Help -->
<div
  style="margin-top: 32px; padding-top: 24px; border-top: 1px solid #e2e8f0;"
>
  <h3
    style="color: #1e293b; font-size: 18px; font-weight: 600; margin-bottom: 16px; text-align: center;"
  >
    Need Additional Help?
  </h3>
  <p
    style="color: #64748b; font-size: 14px; text-align: center; margin-bottom: 16px;"
  >
    If you're having trouble with the password reset process, our support team
    is here to help.
  </p>
  <div style="text-align: center;">
    <a
      href="mailto:support@pharmacare.com"
      style="color: #3b82f6; text-decoration: none; font-weight: 600; font-size: 14px;"
    >
      📧 Contact Support
    </a>
    <span style="color: #cbd5e1; margin: 0 12px;">|</span>
    <a
      href="{{helpCenterLink}}"
      style="color: #3b82f6; text-decoration: none; font-weight: 600; font-size: 14px;"
    >
      📚 Help Center
    </a>
  </div>
</div>

<!-- Request Details -->
<div
  style="margin-top: 32px; background-color: #f8fafc; border-radius: 8px; padding: 20px; font-size: 13px; color: #64748b;"
>
  <p style="margin: 0 0 8px 0; font-weight: 600;">
    Request Details:
  </p>
  <p style="margin: 0 0 4px 0;">
    📅 Date:
    {{requestDate}}
  </p>
  <p style="margin: 0 0 4px 0;">
    🕐 Time:
    {{requestTime}}
  </p>
  <p style="margin: 0 0 4px 0;">
    🌍 IP Address:
    {{ipAddress}}
  </p>
  <p style="margin: 0;">
    💻 Device:
    {{userAgent}}
  </p>
</div>